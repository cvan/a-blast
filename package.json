{
  "name": "a-blast",
  "version": "0.1.0",
  "description": "A WebVR FPS mini-game demo using A-Frame by Mozilla VR.",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start": "webpack-dev-server --host 0.0.0.0 --progress --colors --hot -d --inline",
    "preprod": "npm run build",
    "prod": "cross-env NODE_ENV=production http-server -c-1",
    "lint": "semistandard -v | snazzy"
  },
  "repository": "aframevr/a-blast",
  "license": "MIT",
  "semistandard": {
    "ignore": [
      "**/vendor/**"
    ]
  },
  "devDependencies": {
    "cross-env": "^3.0.0",
    "http-server": "^0.10.0",
    "semistandard": "^9.0.0",
    "snazzy": "^4.0.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "workbox-webpack-plugin": "^1.3.0"
  }
}
